<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="hitw_arm" params="parent prefix *origin">

    <xacro:include filename="inertia_macro.xacro"/>

    <!--********************************* BASE JOINT *********************************-->
    <joint name="${prefix}base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}base_link"/>
    </joint>

    <!--********************************* BASE LINK *********************************-->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0.05"/>
        <geometry>
          <cylinder radius="0.25" length="0.1"/>
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.05"/>
        <geometry>
          <cylinder radius="0.25" length="0.1"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="0.5" r="0.25" h="0.1"/> 
    </link>

    <gazebo reference="${prefix}base_link">
      <material>Gazebo/Black</material>
    </gazebo>

    <!--********************************* LINK 1 *********************************-->
    <link name="${prefix}link1">
      <visual>
        <origin xyz="0 0 0.25"/>
        <geometry>
          <box size="0.1 0.1 0.5"/>
        </geometry>
        <material name="white"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.25"/>
        <geometry>
          <box size="0.1 0.1 0.5"/>
        </geometry>
      </collision>

      <xacro:box_inertia m="0.5" d="0.1" w="0.1" h="0.5"/> 
    </link>

    <gazebo reference="${prefix}link1">
      <material>Gazebo/White</material>
      <kp>100000.0</kp>
      <kd>1.0</kd>
      <mu1>10.0</mu1>
      <mu2>10.0</mu2>
    </gazebo>

    <!--********************************* LINK 2 *********************************-->
    <link name="${prefix}link2">
      <visual>
        <origin xyz="0 0 0.25"/>
        <geometry>
          <box size="0.1 0.1 0.5"/>
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.25"/>
        <geometry>
          <box size="0.1 0.1 0.5"/>
        </geometry>
      </collision>

      <xacro:box_inertia m="0.5" d="0.1" w="0.1" h="0.5"/> 
    </link>

    <gazebo reference="${prefix}link2">
      <material>Gazebo/Blue</material>
      <kp>100000.0</kp>
      <kd>1.0</kd>
      <mu1>10.0</mu1>
      <mu2>10.0</mu2>
    </gazebo>

    <!--********************************* JOINT 1 *********************************-->
    <joint name="${prefix}joint1" type="revolute">
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="-1.5708" upper="1.5708" velocity="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link1"/>
      <limit
        lower="${-2.0*pi}"
        upper="${2.0*pi}"/>
    </joint>

    <!--********************************* JOINT 2 *********************************-->
    <joint name="${prefix}joint2" type="revolute">
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="-1.5708" upper="1.5708" velocity="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <parent link="${prefix}link1"/>
      <child link="${prefix}link2"/>
      <limit
        lower="${-2.0*pi}"
        upper="${2.0*pi}"/>
    </joint>

  </xacro:macro>

</robot>